<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/lightwood_background"
        tools:context="com.cmpe295.grabz.activity.ItemDetailActivity">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/topBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/basket_list_background">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/itemNameDetail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageDetail"
                android:layout_alignTop="@+id/itemDescriptionDetail"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/itemNameDetail"
                android:layout_marginLeft="5dp"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/itemDescriptionDetail"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:layout_below="@id/itemNameDetail"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/imageDetail"
                android:textColor="#fff" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:paddingTop="4dp"
            android:background="#696969"
            android:layout_below="@id/topBox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/categoryHeader"
            android:textStyle="bold"
            android:layout_below="@id/view1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/category"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/categoryHeader"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/colorHeader"
            android:textStyle="bold"
            android:layout_below="@id/category"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/color"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/colorHeader"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/sizeHeader"
            android:textStyle="bold"
            android:layout_below="@id/color"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/size"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sizeHeader"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/priceHeader"
            android:textStyle="bold"
            android:layout_below="@id/size"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/priceDetail"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/priceHeader"
            android:layout_marginLeft="4dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textColor="#ffff3711"
            android:id="@+id/promoPriceDetail"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/priceDetail"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />
    </RelativeLayout>

</ScrollView><!-- From: file:/Users/shajithiyarathodi/project/2/GrabzAndroid/app/src/main/res/layout/activity_item_detail.xml -->