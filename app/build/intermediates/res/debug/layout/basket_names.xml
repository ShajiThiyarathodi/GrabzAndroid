<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/basketNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_vertical"
        android:textColor="#ff052654"
        android:paddingLeft="16dp"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        />

    <ImageButton
        android:id="@+id/basketDelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_alignParentRight="true"
        />
    <ImageButton
        android:id="@+id/basketEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_toLeftOf="@id/basketDelBtn"
        />
</RelativeLayout><!-- From: file:/Users/shaji.thiyara/project/GrabzAndroid/app/src/main/res/layout/basket_names.xml -->